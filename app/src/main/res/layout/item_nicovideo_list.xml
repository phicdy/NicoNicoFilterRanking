<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_nicovideo_thumbnail"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nicovideo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Title" />

        <TextView
            android:id="@+id/tv_nicovideo_published_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2010/12/12" />

        <TextView
            android:id="@+id/tv_nicovideo_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="再生数：100000 コメント：1000 マイリスト：100" />

    </LinearLayout>
</LinearLayout>
